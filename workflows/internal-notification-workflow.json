{
  "workflow": {
    "name": "Internal Order Notification",
    "description": "Notifies internal team when new order is received",
    "trigger": {
      "type": "opportunity_created",
      "conditions": [
        {
          "field": "pipeline_id",
          "operator": "equals",
          "value": "YOUR_PIPELINE_ID"
        }
      ]
    },
    "actions": [
      {
        "type": "send_email",
        "name": "Notify Team",
        "template": "internal_order_notification",
        "to": "orders@happilyeverbakers.com",
        "subject": "New Cookie Order Received - {{opportunity.customFields.order_number}}",
        "delay": 0,
        "variables": {
          "customer_name": "{{contact.firstName}} {{contact.lastName}}",
          "customer_email": "{{contact.email}}",
          "customer_phone": "{{contact.phone}}",
          "order_number": "{{opportunity.customFields.order_number}}",
          "total_items": "{{opportunity.customFields.total_items}}",
          "total_value": "{{opportunity.customFields.total_value}}",
          "delivery_address": "{{contact.address1}}",
          "city": "{{contact.city}}",
          "zip_code": "{{contact.postalCode}}",
          "special_instructions": "{{opportunity.customFields.special_instructions}}",
          "delivery_date": "{{opportunity.customFields.delivery_date}}"
        }
      },
      {
        "type": "send_sms",
        "name": "SMS Alert",
        "to": "+1234567890",
        "message": "üç™ New cookie order received! Order #{{opportunity.customFields.order_number}} - {{contact.firstName}} {{contact.lastName}} - ${{opportunity.customFields.total_value}}",
        "delay": 0
      }
    ],
    "settings": {
      "enabled": true,
      "priority": "high"
    }
  },
  "email_template": {
    "name": "internal_order_notification",
    "subject": "New Cookie Order Received - {{order_number}}",
    "html_content": "<!DOCTYPE html><html><head><meta charset='UTF-8'><style>body{font-family:Arial,sans-serif;max-width:600px;margin:0 auto;line-height:1.6}h1{color:#8B4513}.customer-info{background:#f8f9fa;padding:20px;border-radius:10px;margin:20px 0}.order-info{background:#e8f5e8;padding:20px;border-radius:10px;margin:20px 0}.urgent{background:#fff3cd;padding:15px;border-radius:8px;margin:15px 0;border-left:4px solid #ffc107}</style></head><body><h1>üç™ New Cookie Order Received</h1><div class='customer-info'><h3>Customer Information</h3><p><strong>Name:</strong> {{customer_name}}</p><p><strong>Email:</strong> {{customer_email}}</p><p><strong>Phone:</strong> {{customer_phone}}</p><p><strong>Delivery Address:</strong> {{delivery_address}}</p><p><strong>City:</strong> {{city}}</p><p><strong>ZIP Code:</strong> {{zip_code}}</p></div><div class='order-info'><h3>Order Information</h3><p><strong>Order Number:</strong> {{order_number}}</p><p><strong>Total Items:</strong> {{total_items}}</p><p><strong>Total Value:</strong> ${{total_value}}</p><p><strong>Preferred Delivery Date:</strong> {{delivery_date}}</p><p><strong>Special Instructions:</strong> {{special_instructions}}</p></div><div class='urgent'><strong>Action Required:</strong><br>1. Review order details in GHL pipeline<br>2. Send invoice to customer<br>3. Schedule baking time<br>4. Update pipeline stage to 'Processing'</div><p>Please process this order promptly to ensure customer satisfaction.</p></body></html>"
  }
}
